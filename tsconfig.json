{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": ".",
    "outDir": "build",
    "types": [
      "@types/bluebird",
      "@types/feedparser",
      "@types/lodash",
      "@types/node"
    ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "index.d.ts"
  ]
}